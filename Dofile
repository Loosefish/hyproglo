#!/bin/sh

do_() {
    do_halogen
}


do_server() {
    python hpg.py
}


do_halogen() {
    cd halogen
    case $1 in
        w)  pulp --before clear -w browserify --optimise --to ../server/app.js
            ;;
        *)  pulp browserify --optimise --to ../server/app.js
            ;;
    esac
}

do_images() {
    rm -rf server/image/*
    zsh -c 'ls /home/henry/Medien/Musik/*/*.[pj][np]g | while read x; do ln -s "$x" "server/image/$(basename "$(dirname $x)")"; done'
}
